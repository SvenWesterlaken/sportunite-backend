@model SportUnite.UI.ViewModels.LoginModel

@{
	Layout = "_LoginLayout";
	ViewData["title"] = "Inloggen";
}

<div class="card-panel col s12 m6 " id="attend-form">
	<form class="col s12" asp-action="Login" method="post">
		<div class="row">
			<div class="input-field col s12">
				<label asp-for="Name">Username</label>
				<input class="form-control" asp-for="Name" type="text" />
				<span asp-validation-for="Name" class="red-text"></span>
			</div>
			<div class="input-field col s12">
				<label asp-for="Password">Password</label>
				<input class="form-control" asp-for="Password" type="password" />
				<span asp-validation-for="Password" class="red-text"></span>
			</div>
		</div>
		<div class="row">
			<div class="col s12">
				<button class="waves-effect waves-light btn col s12" type="submit">Login</button>
			</div>
		</div>
	</form>
</div>